# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
# Tabs are better for Bash scripts (e.g. for indentation-ignoring heredoc)
# http://www.tldp.org/LDP/abs/html/here-docs.html#LIMITSTRDASH
indent_style = tab
indent_size = 4
